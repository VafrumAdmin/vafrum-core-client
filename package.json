{
  "name": "vafrum-core-client",
  "version": "1.0.9",
  "description": "Vafrum Core - Bambu Lab Printer Manager",
  "author": "Vafrum <info@vafrum.de>",
  "homepage": "https://github.com/VafrumAdmin/vafrum-core-client",
  "repository": {
    "type": "git",
    "url": "https://github.com/VafrumAdmin/vafrum-core-client.git"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --win --mac --linux",
    "build:portable": "electron-builder --win portable",
    "release": "electron-builder --publish always",
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "com.vafrum.core",
    "productName": "Vafrum Core",
    "win": {
      "target": [
        "nsis"
      ],
      "extraResources": [
        {
          "from": "binaries/win-x64/",
          "to": ".",
          "filter": ["**/*"]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dir",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.utilities",
      "extraResources": [
        {
          "from": "binaries/mac-${arch}/",
          "to": ".",
          "filter": ["**/*"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "dir",
          "arch": ["x64"]
        }
      ],
      "category": "Utility",
      "extraResources": [
        {
          "from": "binaries/linux-x64/",
          "to": ".",
          "filter": ["**/*"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "artifactName": "VafrumCore-Setup-${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "VafrumAdmin",
      "repo": "vafrum-core-client"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "styles.css",
      "bridge/**/*"
    ]
  },
  "dependencies": {
    "electron-updater": "^6.1.7",
    "express": "^4.18.2",
    "mqtt": "^5.15.0",
    "socket.io-client": "^4.8.3"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
